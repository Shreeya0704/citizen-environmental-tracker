# --- Core services ---
S3_BUCKET=ingestion
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

POSTGRES_USER=cstracker
POSTGRES_PASSWORD=cstracker
POSTGRES_DB=cstracker
DATABASE_URL=postgresql://cstracker:cstracker@cstr_postgres:5432/cstracker

RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Ingestion
INGEST_PREFIX=openaq/raw/
OPENAQ_LIMIT=100
INAT_ENABLED=true
INAT_PER_PAGE=50
INAT_TAXON_ID=
INAT_PLACE_ID=

# Ports
SUBMISSION_API_PORT=8088
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GATEWAY_PORT=8090
TRAEFIK_DASHBOARD_PORT=8091
SONAR_PORT=9002
JENKINS_PORT=8092
ALERTMANAGER_PORT=9093

# Traefik BasicAuth (set your own; then generate hash with `docker run --rm httpd:2.4-alpine sh -lc "htpasswd -nbB apiuser <PASS>"`)
TRAEFIK_BASIC_USER=apiuser
TRAEFIK_BASIC_PASS=apipass-CHANGE-ME
# Example only; replace after generating your own hash. Escape $ as $$ if placing in compose.
TRAEFIK_BASIC_AUTH_USERS=apiuser:\$2y\$05\$exampleexampleexampleexampleexampleexampleexampleexample
